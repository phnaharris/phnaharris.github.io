---
const { title, subtitle, desc, date } = Astro.props;
---

<div class="flex">
  <div class="education__time">
    <span class="w-4 h-4 bg-skin-accent block rounded-full mt-1"></span>
    <span
      class="education__line bg-skin-accent block h-full w-[2px] translate-x-[7px]"
    ></span>
  </div>
  <div class="bd-grid w-full px-3">
    <h1 class="md:flex text-lg">
      <div class="text-skin-accent shrink">{title}</div>
      <div class="md:ml-auto md:text-end flex-none">{date}</div>
    </h1>
    <h2 class="m-0 text-sm">{subtitle}</h2>
    <ul class="text-justify">
      {Object.values(desc).map(item => <li class="text-sm">{item}</li>)}
    </ul>
  </div>
</div>
